{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": [
      "**/node_modules/**",
      "**/playwright/test-results/**",
      "**/playwright/playwright-report/**",
      "**/coverage/**",
      "**/scripts/**",
      "**/cert/**",
      "**/docs/**",
      "**/cdk.out/**",
      "**/dist/**",
      "**/.next/**",
      "**/.nyc_output/**",
      "**/.vscode/**",
      "**/.github/**",
      "**/.api/**",
      "**/*.json",
      "**/**/app.cy.ts",
      "*.json"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "useKeyWithClickEvents": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
